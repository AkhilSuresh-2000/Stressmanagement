<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StressManagement.MainPage"
             BackgroundImageSource="wallpaper_main.jpg">

    <StackLayout  VerticalOptions="CenterAndExpand">
        <Label Text="Better Life" TextColor="White" FontSize="20" FontAttributes="Bold" Margin="20,20" HorizontalOptions="CenterAndExpand"></Label>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="The main purpose of better life is t help you 
                   achieve a more peaceful life" TextColor="White" FontSize="15" Margin="20,25" FontAttributes="Bold"></Label>
        </StackLayout>
        <Button x:Name="navigatetoNews" Text="Read the lates health tips" Clicked="navigatetoNews_Clicked" ></Button>
        <Button x:Name="checkStress" Text="Check your stress here"  Clicked="checkStress_Clicked"  />
    </StackLayout>
    

</ContentPage>
